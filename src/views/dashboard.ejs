    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>

        // Datos de comparaciones del servidor
        const comparaciones = <% - JSON.stringify(comparaciones) %>;

        // Referencias a elementos
        const searchInput = document.getElementById('searchInput');
        const yearFilter = document.getElementById('yearFilter');
        const statusFilter = document.getElementById('statusFilter');
        const clearFiltersBtn = document.getElementById('clearFilters');
        const comparisonCards = document.querySelectorAll('.comparison-card');
        const searchContainer = document.getElementById('searchContainer');
        const header = document.querySelector('.header');
        const stickyWrapper = document.querySelector('.sticky-wrapper');

        // Agregar efecto de sombra al hacer scroll
        window.addEventListener('scroll', function() {
            if (window.scrollY > 50) {
                searchContainer.classList.add('scrolled');
                header.classList.add('scrolled');
            } else {
                searchContainer.classList.remove('scrolled');
                header.classList.remove('scrolled');
            }
        });

        // Extraer a√±os √∫nicos de las comparaciones
        function populateYearFilter() {
            const years = new Set();
            comparaciones.forEach(comp => {
                // Extraer a√±o del mes actual y anterior
                const yearActual = comp.mesActual.split(' ')[1];
                const yearAnterior = comp.mesAnterior.split(' ')[1];
                if (yearActual) years.add(yearActual);
                if (yearAnterior) years.add(yearAnterior);
            });

            // Ordenar a√±os y agregar al select
            Array.from(years).sort().reverse().forEach(year => {
                const option = document.createElement('option');
                option.value = year;
                option.textContent = `üìÖ A√±o ${year}`;
                yearFilter.appendChild(option);
            });
        }

        // Funci√≥n principal de filtrado
        function filterComparisons() {
            const searchTerm = searchInput.value.toLowerCase().trim();
            const selectedYear = yearFilter.value;
            const selectedStatus = statusFilter.value;

            let visibleCount = 0;

            comparisonCards.forEach((card, index) => {
                const comp = comparaciones[index];
                let shouldShow = true;

                // Filtro de b√∫squeda (servicio o n√∫mero de factura)
                if (searchTerm) {
                    const servicio = comp.servicio.toLowerCase();
                    const numerosFacturas = [
                        ...comp.facturasAnterior.map(f => f.numero.toLowerCase()),
                        ...comp.facturasActual.map(f => f.numero.toLowerCase())
                    ];

                    const matchServicio = servicio.includes(searchTerm);
                    const matchNumero = numerosFacturas.some(num => num.includes(searchTerm));

                    if (!matchServicio && !matchNumero) {
                        shouldShow = false;
                    }
                }

                // Filtro de a√±o
                if (selectedYear && shouldShow) {
                    const yearActual = comp.mesActual.split(' ')[1];
                    const yearAnterior = comp.mesAnterior.split(' ')[1];

                    if (yearActual !== selectedYear && yearAnterior !== selectedYear) {
                        shouldShow = false;
                    }
                }

                // Filtro de estado
                if (selectedStatus && shouldShow) {
                    if (comp.estado !== selectedStatus) {
                        shouldShow = false;
                    }
                }

                // Mostrar u ocultar tarjeta
                if (shouldShow) {
                    card.classList.remove('hidden');
                    visibleCount++;
                } else {
                    card.classList.add('hidden');
                }
            });

            // Mostrar mensaje si no hay resultados
            showNoResults(visibleCount);

            // Actualizar estad√≠sticas
            updateStats(visibleCount);
        }

        // Mostrar mensaje cuando no hay resultados
        function showNoResults(count) {
            let noResultsDiv = document.querySelector('.no-results');

            if (count === 0) {
                if (!noResultsDiv) {
                    noResultsDiv = document.createElement('div');
                    noResultsDiv.className = 'no-results';
                    noResultsDiv.innerHTML = `
                        <h2>üîç No se encontraron resultados</h2>
                        <p>Intenta ajustar los filtros o la b√∫squeda</p>
                    `;
                    document.querySelector('.stats-grid').insertAdjacentElement('afterend', noResultsDiv);
                }
            } else {
                if (noResultsDiv) {
                    noResultsDiv.remove();
                }
            }
        }

        // Actualizar estad√≠sticas seg√∫n filtros
        function updateStats(visibleCount) {
            const visibleComparisons = [];
            comparisonCards.forEach((card, index) => {
                if (!card.classList.contains('hidden')) {
                    visibleComparisons.push(comparaciones[index]);
                }
            });

            const aumentos = visibleComparisons.filter(c => c.estado === 'subio').length;
            const reducciones = visibleComparisons.filter(c => c.estado === 'bajo').length;

            // Actualizar n√∫meros en las tarjetas de estad√≠sticas
            const statCards = document.querySelectorAll('.stat-card .number');
            statCards[0].textContent = visibleCount;
