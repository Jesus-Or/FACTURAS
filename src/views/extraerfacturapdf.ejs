<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Extraer Factura PDF</title>
  <!-- Bootstrap 5.3.8 CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css">
  <!-- Google Fonts Inter -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', Arial, sans-serif;
      background: #f6f8fa;
    }
    .table th, .table td {
      vertical-align: middle !important;
    }
    pre.factura-bloque {
      white-space: pre-wrap;
      max-height: 250px;
      max-width: 550px;
      overflow: auto;
      font-size: 0.96em;
      background: #f8f9fa;
      border: 1px solid #dee2e6;
      border-radius: 6px;
      font-family: 'Inter', Arial, sans-serif;
      margin-bottom: 0;
      padding: 8px;
      color: #343a40;
    }
    h1 {
      font-weight: 500;
      margin-top: 2rem;
      color: #200461;
    }
    .btn-primary {
      font-family: 'Inter', Arial, sans-serif;
    }
  </style>
</head>
<body>
  <div class="container py-4">

    <h1 class="mb-4">Sube tu Factura en PDF</h1>
    <form action="/extraerfacturapdf" method="post" enctype="multipart/form-data" class="mb-4">
      <div class="row g-2 align-items-center">
        <div class="col-sm">
          <input type="file" class="form-control" name="factura" accept="application/pdf" required>
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-primary">Subir Factura</button>
        </div>
      </div>
    </form>

    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover align-middle">
        <thead class="table-primary">
          <tr>
            <th>Id</th>
            <th>Número de Factura</th>
            <th>Fecha Emisión</th>
            <th>Fecha Vencimiento</th>
            <th style="min-width:350px;">Cliente/Descripción</th>
            <th>Monto Total</th>
          </tr>
        </thead>
        <tbody>
          <% if (facturas && facturas.length > 0) { %>
            <% facturas.forEach(function(f) { %>
              <tr>
                <td><%= f.Id %></td>
                <td><%= f.NumeroFactura %></td>
                <td><%= f.FechaEmision ? new Date(f.FechaEmision).toISOString().split('T')[0] : '' %></td>
                <td><%= f.FechaVencimiento ? new Date(f.FechaVencimiento).toISOString().split('T')[0] : '' %></td>
                <td>
                  <pre class="factura-bloque"><%= f.Cliente %></pre>
                </td>
                <td class="text-end"><%= Number(f.MontoTotal).toLocaleString('es-CO', {minimumFractionDigits:2}) %></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="6" class="text-center">No hay facturas registradas.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

  </div>
</body>
</html>
